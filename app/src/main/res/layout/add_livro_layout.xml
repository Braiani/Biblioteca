<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="@string/titulo_livro" />

    <EditText
        android:id="@+id/txtAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="25dp"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="@string/autor_livro" />

    <EditText
        android:id="@+id/txtEditora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAutor"
        android:layout_marginTop="25dp"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="@string/editora_livro" />

    <Button
        android:id="@+id/btnAddLivro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEditora"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Salvar livro" />
</RelativeLayout>